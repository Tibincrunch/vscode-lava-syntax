{
    "comments": {
        "blockComment": [ "{% comment %}", "{% endcomment %}" ]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        { "open": "{%", "close": "%}", "notIn": ["comment"] },
        { "open": "{{", "close": "}}", "notIn": ["comment"] },
        { "open": "[", "close": "]", "notIn": ["comment"] },
        { "open": "(", "close": ")", "notIn": ["comment"] },
        { "open": "\"", "close": "\"", "notIn": ["comment"] },
        { "open": "'", "close": "'", "notIn": ["comment"] }
    ],
    "autoCloseBefore": "%-:.,=}])>'\"` \n\t",
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["%", "%"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`","`"]
    ]
}
